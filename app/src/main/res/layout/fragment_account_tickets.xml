<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/ver_tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:text="Ver meus tickets"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_icone_tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ver_tickets"
        app:layout_constraintEnd_toStartOf="@+id/ver_tickets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ver_tickets"
        app:srcCompat="@drawable/seta_back" />


    <TextView
        android:id="@+id/TextBilheteBasico"
        android:layout_width="282dp"
        android:layout_height="53dp"
        android:textSize="20sp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rectangle_text"
        android:hint="Bilhete BÃ¡sico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ver_tickets" />

    <ImageView
        android:id="@+id/partilha_icone_bilhete_basico"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/partilha_icone"
        app:layout_constraintBottom_toBottomOf="@+id/TextBilheteBasico"
        app:layout_constraintEnd_toEndOf="@+id/TextBilheteBasico"
        app:layout_constraintTop_toTopOf="@+id/TextBilheteBasico"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>